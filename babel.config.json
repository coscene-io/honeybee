{
  "presets": [
    [
      "@babel/preset-env",
      {
        "targets": {
          "node": 18,
          "chrome": 87,
          "firefox": 78,
          "safari": 14,
          "edge": 88
        }
      }
    ],
    "@babel/preset-typescript",
    "@babel/preset-react"
  ],
  "plugins": [
    "babel-plugin-transform-import-meta",
    "@babel/plugin-transform-modules-commonjs",
    "@babel/plugin-proposal-explicit-resource-management"
  ]
}
